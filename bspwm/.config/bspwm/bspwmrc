#! /bin/sh

# Hotkey daemon
pgrep -x sxhkd > /dev/null || sxhkd &

# Configure physical displays
xrandr --output DP-2 --right-of DP-0
xrandr --output DP-2 --primary
xrandr --output DP-0 --mode 2560x1440 --rate 144
xrandr --output DP-2 --mode 2560x1440 --rate 144

# Monitor setup
bspc monitor DP-2 -d I II III IV V
bspc monitor DP-0 -d VI VII VIII IX X
bspc monitor DP-0 -s DP-2

# Gaps
bspc config border_width         0
bspc config window_gap          12

# Misc. bspwm
bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# Cursor
xsetroot -cursor_name left_ptr &

# Bars
$HOME/.config/polybar/launch.sh &

# Background
feh --bg-fill $HOME/Pictures/Wallpapers/current.jpg &

# Compositor
picom -b &

# Notifications
killall -q gsd-print-notifications
dunst &

# Keyring
gnome-keyring-daemon --start --components=pkcs11

# Polkit agent
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
